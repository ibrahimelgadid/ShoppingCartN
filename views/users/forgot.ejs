<% include ../partials/header %> 
<form action="/users/forgot" method="post" class="text-center">
    <div class="row justify-content-center">
        <div class="col-9">
            
            <small>we will send pattern to reset your password</small>            
            <div class="input-group mt-3">
                <span class="input-group-text">email</span>
                <input type="text" name="email" class="form-control" placeholder="inser your email">
            </div>
            <% if (errors) { %>
                <% errors.forEach(err => { %>
                    <div class="text-danger"><%= err.param ==="email"?err.msg:''%></div>
                <% }) %>
            <% } %>
            <button type="submit" class="btn btn-success mb-4 mt-3">Send</button>
            
        </div>
    </div>
</form>
<% include ../partials/footer %> 