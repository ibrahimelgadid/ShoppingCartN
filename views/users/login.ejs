<% include ../partials/header %> 
<form action="/users/login" method="post" class="text-center">
    <div class="row justify-content-center">
        <div class="col-9">
            
            <h3>Login Page</h3>            
            <div class="input-group mt-3">
                <span class="input-group-text">email</span>
                <input type="text" name="email" class="form-control" placeholder="inser your email">
            </div>
            <% if (errors) { %>
                <% errors.forEach(err => { %>
                    <div class="text-danger"><%= err.param ==="email"?err.msg:''%></div>
                <% }) %>
            <% } %>
            <div class="input-group mt-3">
                <span class="input-group-text">password</span>
                <input type="password" name="password" class="form-control" placeholder="inser your password">
            </div>
            <% if (errors) { %>
                <% errors.forEach(err => { %>
                    <div class="text-danger"><%= err.param ==="password"?err.msg:''%></div>
                <% }) %>
            <% } %>
            <button type="submit" class="btn btn-success mb-4 mt-3">Login</button>
            <p>Dont have account?<a href="/users/register">Register</a></p>
            <p><a href="/users/forgot">forgot password?</a></p>
        </div>
    </div>
</form>
<% include ../partials/footer %> 